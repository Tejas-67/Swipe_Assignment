<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.ProductListDialogFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="250dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_add_image"
                android:layout_marginTop="-30dp"
                android:id="@+id/add_image_fab"
                android:foregroundGravity="center"
                app:layout_constraintTop_toBottomOf="@id/image"
                android:contentDescription="fab" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="#EDEDED"
                android:id="@+id/product_name_input"
                app:layout_constraintTop_toBottomOf="@id/add_image_fab"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/product_name_edit"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Product name"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:boxBackgroundColor="#EDEDED"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginTop="16dp"
                android:id="@+id/product_type_input"
                app:layout_constraintTop_toBottomOf="@id/product_name_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:text="Product Type"
                    android:id="@+id/product_type_dropdown"
                    android:inputType="none"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/product_type_input"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/selling_price_ll"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_rupee"/>

                <com.google.android.material.textfield.TextInputLayout
                    app:boxBackgroundColor="#EDEDED"
                    android:layout_width="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="Selling Price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selling_price_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:id="@+id/tax_ll"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_tax"/>

                <com.google.android.material.textfield.TextInputLayout
                    app:boxBackgroundColor="#EDEDED"
                    android:layout_width="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="Tax"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tax_ll"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/add_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:backgroundTint="@color/blue"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="4dp"
                android:layout_marginTop="28dp"
                android:text="Add"
                android:layout_height="50dp"/>
                <Space
                    app:layout_constraintTop_toBottomOf="@id/add_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="100dp"
                    android:layout_width="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
